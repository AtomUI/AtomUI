        <gallery:ShowCaseItem Title="Order" Description="Change column order." IsOccupyEntireRow="True">
            <StackPanel Margin="20" Spacing="12">
                <TextBlock Classes="grid-section-title">Normal</TextBlock>
                <atom:Row Gutter="16,16">
                    <atom:Col Span="6" Order="1">
                        <Border Classes="grid-cell">
                            <TextBlock Classes="grid-cell-text">4 col-order-1</TextBlock>
                        </Border>
                    </atom:Col>
                    <atom:Col Span="6" Order="2">
                        <Border Classes="grid-cell alt">
                            <TextBlock Classes="grid-cell-text">3 col-order-2</TextBlock>
                        </Border>
                    </atom:Col>
                    <atom:Col Span="6" Order="3">
                        <Border Classes="grid-cell">
                            <TextBlock Classes="grid-cell-text">2 col-order-3</TextBlock>
                        </Border>
                    </atom:Col>
                    <atom:Col Span="6" Order="4">
                        <Border Classes="grid-cell alt">
                            <TextBlock Classes="grid-cell-text">1 col-order-4</TextBlock>
                        </Border>
                    </atom:Col>
                </atom:Row>

                <TextBlock Classes="grid-section-title">Responsive</TextBlock>
                <atom:Row Gutter="16,16">
                    <atom:Col Span="6" Order="1" Sm="{atom:ColInfo Order=2}">
                        <Border Classes="grid-cell">
                            <TextBlock Classes="grid-cell-text">3 col-order-responsive</TextBlock>
                        </Border>
                    </atom:Col>
                    <atom:Col Span="6" Order="2" Sm="{atom:ColInfo Order=1}">
                        <Border Classes="grid-cell alt">
                            <TextBlock Classes="grid-cell-text">4 col-order-responsive</TextBlock>
                        </Border>
                    </atom:Col>
                    <atom:Col Span="6" Order="3" Sm="{atom:ColInfo Order=4}">
                        <Border Classes="grid-cell">
                            <TextBlock Classes="grid-cell-text">2 col-order-responsive</TextBlock>
                        </Border>
                    </atom:Col>
                    <atom:Col Span="6" Order="4" Sm="{atom:ColInfo Order=3}">
                        <Border Classes="grid-cell alt">
                            <TextBlock Classes="grid-cell-text">1 col-order-responsive</TextBlock>
                        </Border>
