<ControlTheme TargetType="atom:ScrollBarThumb"
              xmlns="https://github.com/avaloniaui"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:atom="https://atomui.net"
              x:Class="AtomUI.Desktop.Controls.Themes.ScrollBarThumbTheme">
    <Setter Property="Template">
        <ControlTemplate TargetType="atom:ScrollBarThumb">
            <Border Name="Frame"
                    UseLayoutRounding="False"
                    Background="{TemplateBinding Background}"
                    Margin="{TemplateBinding Margin}"
                    CornerRadius="{TemplateBinding CornerRadius}" />
        </ControlTemplate>
    </Setter>

    <Style Selector="^:is(atom|ScrollBarThumb)">
        <Setter Property="Background" Value="{DynamicResource {x:Static atom:ScrollViewerTokenKey.ThumbBg}}" />
        <Setter Property="CornerRadius"
                Value="{DynamicResource {x:Static atom:ScrollViewerTokenKey.ThumbCornerRadius}}" />

        <Style Selector="^:pointerover">
            <Setter Property="Background" Value="{DynamicResource {x:Static atom:ScrollViewerTokenKey.ThumbHoverBg}}" />
            <Style Selector="^[IsLiteMode=True]">
                <Setter Property="IsExpanded" Value="True" />
            </Style>
        </Style>

        <Style Selector="^:pressed">
            <Setter Property="Background" Value="{DynamicResource {x:Static atom:ScrollViewerTokenKey.ThumbActiveBg}}" />
            <Style Selector="^[IsLiteMode=True]">
                <Setter Property="IsExpanded" Value="True" />
            </Style>
        </Style>

        <Style Selector="^[Orientation=Vertical]">
            <Style Selector="^[IsLiteMode=True]">
                <Setter Property="Width"
                        Value="{DynamicResource {x:Static atom:ScrollViewerTokenKey.LiteModeThumbThickness}}" />
                <Style Selector="^[IsExpanded=True]">
                    <Setter Property="Width"
                            Value="{DynamicResource {x:Static atom:ScrollViewerTokenKey.NormalModeThumbThickness}}" />
                </Style>
            </Style>
            <Style Selector="^[IsLiteMode=False]">
                <Setter Property="Width"
                        Value="{DynamicResource {x:Static atom:ScrollViewerTokenKey.NormalModeThumbThickness}}" />
            </Style>
        </Style>
        <Style Selector="^[Orientation=Horizontal]">
            <Style Selector="^[IsLiteMode=True]">
                <Setter Property="Height"
                        Value="{DynamicResource {x:Static atom:ScrollViewerTokenKey.LiteModeThumbThickness}}" />

                <Style Selector="^[IsExpanded=True]">
                    <Setter Property="Height"
                            Value="{DynamicResource {x:Static atom:ScrollViewerTokenKey.NormalModeThumbThickness}}" />
                </Style>

            </Style>
            <Style Selector="^[IsLiteMode=False]">
                <Setter Property="Height"
                        Value="{DynamicResource {x:Static atom:ScrollViewerTokenKey.NormalModeThumbThickness}}" />
            </Style>
        </Style>
    </Style>

</ControlTheme>