<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net"
    xmlns:uploadlang="using:AtomUI.Desktop.Controls.UploadLang"
    x:ClassModifier="internal">
    <ControlTheme x:Key="{x:Type atom:UploadShapePendingContent}" TargetType="atom:UploadShapePendingContent">
        <ControlTheme.BasedOn>
            <atom:AbstractUploadPictureContentTheme TargetType="atom:UploadShapePendingContent" />
        </ControlTheme.BasedOn>
        <Setter Property="Template">
            <ControlTemplate>
                <Border Name="Frame"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Padding="{TemplateBinding Padding}">
                    <Border Name="ContentFrame"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            ClipToBounds="True">
                        <StackPanel Name="ContentLayout"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <TextBlock Text="{DynamicResource {x:Static uploadlang:UploadLangResourceKey.Pending}}"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </Border>
                </Border>
            </ControlTemplate>
        </Setter>

    </ControlTheme>
</ResourceDictionary>