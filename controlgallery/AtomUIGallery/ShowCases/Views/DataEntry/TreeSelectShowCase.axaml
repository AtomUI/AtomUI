<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AtomUIGallery.ShowCases.Views.TreeSelectShowCase"
             xmlns:atom="https://atomui.net"
             xmlns:gallery="https://atomui.net/oss-controls/gallery"
             xmlns:viewModels="clr-namespace:AtomUIGallery.ShowCases.ViewModels"
             x:DataType="viewModels:TreeSelectViewModel">
    <gallery:ShowCasePanel>
        <gallery:ShowCaseItem
            Title="Basic"
            Description="The most basic usage.">
            <atom:TreeSelect TreeItemsSource="{Binding BasicTreeNodes}"
                             HorizontalAlignment="Stretch"
                             IsTreeDefaultExpandAll="True"
                             IsAllowClear="True"
                             IsFilterEnabled="True"
                             PlaceholderText="Please select" />
        </gallery:ShowCaseItem>
        
        <gallery:ShowCaseItem
            Title="Multiple Selection"
            Description="Multiple selection usage.">
            <atom:TreeSelect TreeItemsSource="{Binding MultiSelectionTreeNodes}"
                             HorizontalAlignment="Stretch"
                             IsTreeDefaultExpandAll="True"
                             IsAllowClear="True"
                             IsFilterEnabled="True"
                             IsMultiple="True"
                             PlaceholderText="Please select" />
        </gallery:ShowCaseItem>
        
        <gallery:ShowCaseItem
            Title="Generate from tree data"
            Description="The tree structure can be populated using treeData property. This is a quick and easy way to provide the tree content.">
            <atom:TreeSelect TreeItemsSource="{Binding ItemsSourceTreeNodes}"
                             HorizontalAlignment="Stretch"
                             IsTreeDefaultExpandAll="True"
                             IsAllowClear="True"
                             IsFilterEnabled="True"
                             PlaceholderText="Please select" />
        </gallery:ShowCaseItem>
        
        <gallery:ShowCaseItem
            Title="Checkable"
            Description="Multiple and checkable.">
            <atom:TreeSelect TreeItemsSource="{Binding CheckableTreeNodes}"
                             HorizontalAlignment="Stretch"
                             IsTreeDefaultExpandAll="True"
                             IsAllowClear="True"
                             IsFilterEnabled="True"
                             IsTreeCheckable="True"
                             PlaceholderText="Please select"
                             ShowCheckedStrategy="All" />
        </gallery:ShowCaseItem>
        
        <gallery:ShowCaseItem
            Title="Asynchronous loading"
            Description="Asynchronous loading tree node.">
            <atom:TreeSelect TreeItemsSource="{Binding AsyncLoadTreeNodes}"
                             TreeItemDataLoader="{Binding AsyncLoadTreeNodeLoader}"
                             HorizontalAlignment="Stretch"
                             IsAllowClear="True"
                             PlaceholderText="Please select" />
        </gallery:ShowCaseItem>
        
        <gallery:ShowCaseItem
            Title="Placement"
            Description="You can manually specify the position of the popup via placement.">
            <StackPanel Orientation="Vertical" Spacing="10">
                <atom:TextBlock VerticalAlignment="Center">Placement:</atom:TextBlock>
                <atom:OptionButtonGroup ButtonStyle="Outline" OptionCheckedChanged="HandlePlacementOptionCheckedChanged">
                    <atom:OptionButton IsChecked="True">TopLeft</atom:OptionButton>
                    <atom:OptionButton>TopRight</atom:OptionButton>
                    <atom:OptionButton>BottomLeft</atom:OptionButton>
                    <atom:OptionButton>BottomRight</atom:OptionButton>
                </atom:OptionButtonGroup>
                <atom:TreeSelect IsAllowClear="True"
                                 TreeItemsSource="{Binding PlacementTreeNodes}"
                                 PlaceholderText="Please select"
                                 IsTreeDefaultExpandAll="True"
                                 IsFilterEnabled="True"
                                 IsPopupMatchSelectWidth="False"
                                 Placement="{Binding Placement}"/>
            </StackPanel>
        </gallery:ShowCaseItem>
        
        <gallery:ShowCaseItem
            Title="Show Tree Line"
            Description="Use treeLine to show the line style.">
            <StackPanel Orientation="Vertical" Spacing="10">
                <atom:ToggleSwitch OnContent="ShowIcon" OffContent="ShowIcon" Name="ShowIconSwitch" />
                <atom:ToggleSwitch OnContent="TreeLine" OffContent="TreeLine" IsChecked="True"
                                   Name="ShowTreeLineSwitch" />
                <atom:ToggleSwitch OnContent="ShowLeafIcon" OffContent="ShowLeafIcon" Name="ShowLeafIconSwitch" />
                <atom:TreeSelect TreeItemsSource="{Binding ShowTreeLineTreeNodes}"
                                 HorizontalAlignment="Stretch"
                                 IsAllowClear="True"
                                 PlaceholderText="Please select"
                                 IsShowIcon="{Binding #ShowIconSwitch.IsChecked}"
                                 IsShowLeafIcon="{Binding #ShowLeafIconSwitch.IsChecked}"
                                 IsShowLine="{Binding #ShowTreeLineSwitch.IsChecked}"
                                 IsSwitcherRotation="{Binding #ShowTreeLineSwitch.IsChecked, Converter={x:Static BoolConverters.Not}}" />
            </StackPanel>
        </gallery:ShowCaseItem>
        
        <gallery:ShowCaseItem
            Title="Variants"
            Description="Variants of TreeSelect, there are four variants: outlined filled borderless and underlined.">
            <StackPanel Orientation="Vertical" Spacing="10">
                <atom:TreeSelect HorizontalAlignment="Stretch"
                                 IsAllowClear="True"
                                 PlaceholderText="Please select"
                                 StyleVariant="Borderless" />
                <atom:TreeSelect HorizontalAlignment="Stretch"
                                 IsAllowClear="True"
                                 PlaceholderText="Please select"
                                 StyleVariant="Filled" />
                <atom:TreeSelect HorizontalAlignment="Stretch"
                                 IsAllowClear="True"
                                 PlaceholderText="Please select"
                                 StyleVariant="Outline" />
                <atom:TreeSelect HorizontalAlignment="Stretch"
                                 IsAllowClear="True"
                                 PlaceholderText="Please select"
                                 StyleVariant="Underlined" />
            </StackPanel>
        </gallery:ShowCaseItem>
        
        <gallery:ShowCaseItem
            Title="Status"
            Description="Add status to TreeSelect with status, which could be error or warning.">
            <StackPanel Orientation="Vertical" Spacing="10">
                <atom:TreeSelect HorizontalAlignment="Stretch"
                                 IsAllowClear="True"
                                 PlaceholderText="Please select"
                                 Status="Error" />
                <atom:TreeSelect HorizontalAlignment="Stretch"
                                 IsAllowClear="True"
                                 PlaceholderText="Please select"
                                 Status="Warning" />
            </StackPanel>
        </gallery:ShowCaseItem>
        
        <gallery:ShowCaseItem
            Title="Prefix and Suffix"
            Description="Custom prefix and suffixIcon.">
            <StackPanel Orientation="Vertical" Spacing="10">
                <atom:TreeSelect HorizontalAlignment="Stretch"
                                 TreeItemsSource="{Binding LeftAddTreeNodes}"
                                 IsAllowClear="True"
                                 PlaceholderText="Please select"
                                 IsTreeDefaultExpandAll="True" 
                                 LeftAddOn="Prefix"
                                 IsFilterEnabled="True"/>
                <atom:TreeSelect HorizontalAlignment="Stretch"
                                 TreeItemsSource="{Binding ContentLeftAddTreeNodes}"
                                 IsAllowClear="True"
                                 PlaceholderText="Please select"
                                 IsTreeDefaultExpandAll="True"
                                 ContentLeftAddOn="Prefix"
                                 IsFilterEnabled="True"/>
            </StackPanel>
        </gallery:ShowCaseItem>
        
        <gallery:ShowCaseItem
            Title="Max Count"
            Description="You can set the maxCount prop to control the max number of items can be selected. When the limit is exceeded, the options will become disabled.">
            <StackPanel Orientation="Vertical" Spacing="10">
                <atom:TreeSelect TreeItemsSource="{Binding MaxSelectedTreeNodes}"
                                 HorizontalAlignment="Stretch"
                                 IsTreeDefaultExpandAll="True"
                                 IsMultiple="True"
                                 IsAllowClear="True"
                                 IsFilterEnabled="True"
                                 PlaceholderText="Please select"
                                 IsShowMaxCountIndicator="True"
                                 MaxCount="3"/>
                <atom:TreeSelect TreeItemsSource="{Binding MaxCheckedTreeNodes}"
                                 HorizontalAlignment="Stretch"
                                 IsTreeDefaultExpandAll="True"
                                 IsMultiple="True"
                                 IsTreeCheckable="True"
                                 IsAllowClear="True"
                                 IsFilterEnabled="True"
                                 PlaceholderText="Please select"
                                 IsShowMaxCountIndicator="True"
                                 MaxCount="3"/>
            </StackPanel>
        </gallery:ShowCaseItem>

    </gallery:ShowCasePanel>
</UserControl>