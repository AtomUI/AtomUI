<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net"
    x:ClassModifier="internal">
    <ControlTheme x:Key="{x:Type atom:MentionOptionList}" TargetType="atom:MentionOptionList">
        <ControlTheme.BasedOn>
            <atom:ListTheme TargetType="atom:MentionOptionList" />
        </ControlTheme.BasedOn>
        
        <Setter Property="IsShowSelectedIndicator" Value="False"/>
        <Setter Property="DisabledItemHoverEffect" Value="False"/>
    </ControlTheme>
</ResourceDictionary>