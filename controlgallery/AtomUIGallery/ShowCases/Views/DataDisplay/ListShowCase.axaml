<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AtomUIGallery.ShowCases.Views.ListShowCase"
             xmlns:atom="https://atomui.net"
             xmlns:gallery="https://atomui.net/oss-controls/gallery"
             xmlns:viewModels="clr-namespace:AtomUIGallery.ShowCases.ViewModels">
    <gallery:ShowCasePanel>

        <gallery:ShowCaseItem
            Title="Basic usage"
            Description="Basic usage example.">
            <atom:List ItemsSource="{Binding ListItems}"
                       x:DataType="viewModels:ListViewModel"
                       IsItemSelectable="False">
                <atom:List.ItemTemplate>
                    <DataTemplate x:DataType="atom:ListItemData">
                        <atom:TextBlock Text="{Binding Content}" />
                    </DataTemplate>
                </atom:List.ItemTemplate>
            </atom:List>
        </gallery:ShowCaseItem>

        <gallery:ShowCaseItem
            Title="Selection"
            Description="You can set single selection, multiple selection or no selection.">
            <StackPanel Spacing="20">
                <StackPanel Orientation="Horizontal" Spacing="5" DockPanel.Dock="Top">
                    <atom:TextBlock VerticalAlignment="Center">Selection Mode:</atom:TextBlock>
                    <atom:OptionButtonGroup ButtonStyle="Solid" Name="SelectionModeOptionGroup">
                        <atom:OptionButton IsChecked="True" Tag="{x:Static SelectionMode.Single}">Single</atom:OptionButton>
                        <atom:OptionButton Tag="{x:Static SelectionMode.Multiple}">Multiple</atom:OptionButton>
                        <atom:OptionButton Tag="{x:Static SelectionMode.Toggle}">Toggle</atom:OptionButton>
                    </atom:OptionButtonGroup>
                </StackPanel>
                <atom:List SelectionMode="{Binding SelectionMode}"
                           ItemsSource="{Binding ListItems}"
                           x:DataType="viewModels:ListViewModel"
                           IsShowSelectedIndicator="True">
                    <atom:List.ItemTemplate>
                        <DataTemplate x:DataType="atom:ListItemData">
                            <atom:TextBlock Text="{Binding Content}" />
                        </DataTemplate>
                    </atom:List.ItemTemplate>
                </atom:List>
            </StackPanel>
        </gallery:ShowCaseItem>

        <gallery:ShowCaseItem
            Title="Hover effect"
            Description="Disabled item hover effect.">
            <atom:List DisabledItemHoverEffect="True"
                       x:DataType="viewModels:ListViewModel"
                       ItemsSource="{Binding ListItems}">
                <atom:List.ItemTemplate>
                    <DataTemplate x:DataType="atom:ListItemData">
                        <atom:TextBlock Text="{Binding Content}" />
                    </DataTemplate>
                </atom:List.ItemTemplate>
            </atom:List>
        </gallery:ShowCaseItem>

        <gallery:ShowCaseItem
            Title="Group"
            Description="You can group the data based on conditions.">
            <atom:List x:DataType="viewModels:ListViewModel"
                       ItemsSource="{Binding GroupListItems}"
                       IsGroupEnabled="True"
                       Height="300">
                <atom:List.ItemTemplate>
                    <DataTemplate x:DataType="atom:ListItemData">
                        <atom:TextBlock Text="{Binding Content}" />
                    </DataTemplate>
                </atom:List.ItemTemplate>
            </atom:List>
        </gallery:ShowCaseItem>

        <gallery:ShowCaseItem
            Title="Item disabled"
            Description="Disabled item.">
            <atom:List x:DataType="viewModels:ListViewModel"
                       ItemsSource="{Binding ListItemsWidthDisabled}">
                <atom:List.ItemTemplate>
                    <DataTemplate x:DataType="atom:ListItemData">
                        <atom:TextBlock Text="{Binding Content}" />
                    </DataTemplate>
                </atom:List.ItemTemplate>
            </atom:List>
        </gallery:ShowCaseItem>

        <gallery:ShowCaseItem
            Title="Empty"
            Description="show empty indicator when no data.">
            <StackPanel Spacing="12">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <atom:Button Content="Add Item"
                                 Click="HandleAddEmptyItemClicked" />
                    <atom:Button Content="Remove Item"
                                 Click="HandleRemoveEmptyItemClicked" />
                </StackPanel>
                <atom:List
                    x:DataType="viewModels:ListViewModel"
                    ItemsSource="{Binding EmptyDemoItems}"
                    IsShowEmptyIndicator="True"
                    IsGroupEnabled="False">
                    <atom:List.ItemTemplate>
                        <DataTemplate x:DataType="atom:ListItemData">
                            <atom:TextBlock Text="{Binding Content}" />
                        </DataTemplate>
                    </atom:List.ItemTemplate>
                </atom:List>
            </StackPanel>
        </gallery:ShowCaseItem>

        <gallery:ShowCaseItem
            Title="Filter"
            Description="You can filter the data based on criteria; here we've filtered for items containing 'a'.">
            <atom:List Name="FilteredList"
                       x:DataType="viewModels:ListViewModel"
                       ItemsSource="{Binding GroupListItems}"
                       IsGroupEnabled="False">
                <atom:List.ItemTemplate>
                    <DataTemplate x:DataType="atom:ListItemData">
                        <atom:TextBlock Text="{Binding Content}" />
                    </DataTemplate>
                </atom:List.ItemTemplate>
            </atom:List>
        </gallery:ShowCaseItem>

        <gallery:ShowCaseItem
            Title="Ordered"
            Description="We can sort according to specified attributes.">
            <atom:List Name="OrderedList"
                       x:DataType="viewModels:ListViewModel"
                       ItemsSource="{Binding GroupListItems}"
                       IsGroupEnabled="True">
                <atom:List.ItemTemplate>
                    <DataTemplate x:DataType="atom:ListItemData">
                        <atom:TextBlock Text="{Binding Content}" />
                    </DataTemplate>
                </atom:List.ItemTemplate>
            </atom:List>
        </gallery:ShowCaseItem>

        <gallery:ShowCaseItem
            Title="Simple listbox control"
            Description="Basic usage example.">
            <atom:ListBox>
                <atom:ListBoxItem>Racing car sprays burning fuel into crowd.</atom:ListBoxItem>
                <atom:ListBoxItem>Japanese princess to wed commoner.</atom:ListBoxItem>
                <atom:ListBoxItem>Australian walks 100km after outback crash.</atom:ListBoxItem>
                <atom:ListBoxItem>Man charged over missing wedding girl.</atom:ListBoxItem>
                <atom:ListBoxItem>Los Angeles battles huge wildfires.</atom:ListBoxItem>
            </atom:ListBox>

        </gallery:ShowCaseItem>

        <gallery:ShowCaseItem
            Title="Simple listbox control"
            Description="Basic ItemsSource and template usage example.">
            <atom:ListBox ItemsSource="{Binding BasicListBoxItems}"
                          x:DataType="viewModels:ListViewModel"
                          IsShowSelectedIndicator="True">
                <atom:ListBox.ItemTemplate>
                    <DataTemplate x:DataType="atom:ListItemData">
                        <atom:TextBlock Text="{Binding Content}" />
                    </DataTemplate>
                </atom:ListBox.ItemTemplate>
            </atom:ListBox>
        </gallery:ShowCaseItem>
        
        <gallery:ShowCaseItem
            Title="Searchable"
            Description="Searchable Tree.">
            <StackPanel Orientation="Vertical" Spacing="10">
                <atom:SearchEdit Watermark="Search"
                                 SearchButtonClick="HandleFilterListBoxClicked"/>
                <atom:ListBox Name="SearchListBox">
                    <atom:ListBoxItem>Racing car sprays burning fuel into crowd.</atom:ListBoxItem>
                    <atom:ListBoxItem>Japanese princess to wed commoner.</atom:ListBoxItem>
                    <atom:ListBoxItem>Australian walks 100km after outback crash.</atom:ListBoxItem>
                    <atom:ListBoxItem>Man charged over missing wedding girl.</atom:ListBoxItem>
                    <atom:ListBoxItem>Los Angeles battles huge wildfires.</atom:ListBoxItem>
                </atom:ListBox>
            </StackPanel>
        </gallery:ShowCaseItem>
    </gallery:ShowCasePanel>
</UserControl>