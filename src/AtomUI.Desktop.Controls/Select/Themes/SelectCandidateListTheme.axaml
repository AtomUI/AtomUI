<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net"
    x:ClassModifier="internal">
    <ControlTheme x:Key="{x:Type atom:SelectCandidateList}" TargetType="atom:SelectCandidateList">
        <ControlTheme.BasedOn>
            <atom:ListTheme TargetType="atom:SelectCandidateList" />
        </ControlTheme.BasedOn>
        
        <Setter Property="ItemTemplate">
            <DataTemplate x:DataType="atom:ISelectOption">
                <atom:TextBlock Text="{Binding Header}" />
            </DataTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>