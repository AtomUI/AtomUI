        <gallery:ShowCaseItem Title="ColInfo" Description="Use ColInfo for responsive overrides." IsOccupyEntireRow="True">
            <StackPanel Margin="20" Spacing="12">
                <StackPanel.Resources>
                    <atom:ColInfo x:Key="MdCol1" Span="12" Order="2" />
                    <atom:ColInfo x:Key="MdCol2" Span="12" Order="1" />
                    <atom:ColInfo x:Key="MdCol3" Span="12" Order="4" />
                    <atom:ColInfo x:Key="MdCol4" Span="12" Order="3" />
                    <atom:ColInfo x:Key="LgCol1" Span="6" Order="1" />
                    <atom:ColInfo x:Key="LgCol2" Span="6" Order="2" />
                    <atom:ColInfo x:Key="LgCol3" Span="6" Order="3" />
                    <atom:ColInfo x:Key="LgCol4" Span="6" Order="4" />
                </StackPanel.Resources>
                <TextBlock Classes="grid-section-title">Base + Md/Lg overrides</TextBlock>
                <atom:Row Gutter="16,16">
                    <atom:Col Span="24">
                        <atom:Col.Md>
                            <atom:ColInfo Span="12" Order="2" />
                        </atom:Col.Md>
                        <atom:Col.Lg>
                            <atom:ColInfo Span="6" Order="1" />
                        </atom:Col.Lg>
                        <Border Classes="grid-cell">
                            <TextBlock Classes="grid-cell-text">col-1 with ColInfo</TextBlock>
                        </Border>
                    </atom:Col>
                    <atom:Col Span="24">
                        <atom:Col.Md>
                            <atom:ColInfo Span="12" Order="1" />
                        </atom:Col.Md>
                        <atom:Col.Lg>
                            <atom:ColInfo Span="6" Order="2" />
                        </atom:Col.Lg>
                        <Border Classes="grid-cell alt">
                            <TextBlock Classes="grid-cell-text">col-2 with ColInfo</TextBlock>
                        </Border>
                    </atom:Col>
                    <atom:Col Span="24">
                        <atom:Col.Md>
                            <atom:ColInfo Span="12" Order="3" />
                        </atom:Col.Md>
                        <atom:Col.Lg>
                            <atom:ColInfo Span="6" Order="3" />
                        </atom:Col.Lg>
                        <Border Classes="grid-cell">
                            <TextBlock Classes="grid-cell-text">col-3 with ColInfo</TextBlock>
                        </Border>
                    </atom:Col>
                    <atom:Col Span="24">
                        <atom:Col.Md>
                            <atom:ColInfo Span="12" Order="4" />
                        </atom:Col.Md>
                        <atom:Col.Lg>
                            <atom:ColInfo Span="6" Order="4" />
                        </atom:Col.Lg>
                        <Border Classes="grid-cell alt">
                            <TextBlock Classes="grid-cell-text">col-4 with ColInfo</TextBlock>
                        </Border>
                    </atom:Col>
                </atom:Row>
                <TextBlock Classes="grid-section-title">Shared resources</TextBlock>
                <atom:Row Gutter="16,16">
                    <atom:Col Span="24" Md="{StaticResource MdCol1}" Lg="{StaticResource LgCol1}">
                        <Border Classes="grid-cell">
                            <TextBlock Classes="grid-cell-text">res-col-1</TextBlock>
                        </Border>
