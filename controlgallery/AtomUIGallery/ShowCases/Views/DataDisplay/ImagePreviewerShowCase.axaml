<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AtomUIGallery.ShowCases.Views.ImagePreviewerShowCase"
             xmlns:atom="https://atomui.net"
             xmlns:gallery="https://atomui.net/oss-controls/gallery">
    <gallery:ShowCasePanel>
        <gallery:ShowCaseItem
            Title="Basic Usage"
            Description="Click the image to zoom in.">
            <atom:ImagePreviewer Width="200" Sources="{Binding DefaultImages}"/>
        </gallery:ShowCaseItem>
    </gallery:ShowCasePanel>
</UserControl>