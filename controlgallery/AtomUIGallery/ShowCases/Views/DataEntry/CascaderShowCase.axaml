                    </atom:CascaderViewItem>
                    <atom:CascaderViewItem Header="jiangsu">
                        <atom:CascaderViewItem Header="Nanjing">
                            <atom:CascaderViewItem Header="Zhong Hua Men" />
                        </atom:CascaderViewItem>
                    </atom:CascaderViewItem>
                </atom:CascaderView>
                
                <atom:CascaderView/>
            </StackPanel>
        </gallery:ShowCaseItem>
    </gallery:ShowCasePanel>
</UserControl>