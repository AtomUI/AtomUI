<ControlTheme
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net"
    TargetType="atom:ListItem"
    x:Class="AtomUI.Desktop.Controls.Themes.ListItemTheme"
    x:ClassModifier="internal">
    <ControlTheme.BasedOn>
        <atom:ListBoxItemTheme TargetType="atom:ListItem"/>
    </ControlTheme.BasedOn>

    <Style Selector="^:is(atom|ListItem)">
        <Style Selector="^[IsGroupItem=True]">
            <Setter Property="Foreground" Value="{DynamicResource {x:Static atom:ListTokenKey.GroupHeaderColor}}" />
            <Setter Property="Background" Value="{DynamicResource {x:Static atom:ListTokenKey.ItemBgColor}}" />
            <Style Selector="^:pointerover">
                <Setter Property="Background" Value="Transparent" />
            </Style>
            
            <Style Selector="^[SizeType=Large]">
                <Setter Property="FontSize" Value="{DynamicResource {x:Static atom:SharedTokenKey.FontSize}}" />
            </Style>

            <Style Selector="^[SizeType=Middle]">
                <Setter Property="FontSize" Value="{DynamicResource {x:Static atom:SharedTokenKey.FontSizeSM}}" />
            </Style>

            <Style Selector="^[SizeType=Small]">
                <Setter Property="FontSize" Value="{DynamicResource {x:Static atom:SharedTokenKey.FontSizeSM}}" />
            </Style>

        </Style>
    </Style>

</ControlTheme>