<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net"
    xmlns:antdicons="https://atomui.net/icons/antdesign"
    x:ClassModifier="internal">
    <ControlTheme x:Key="{x:Type atom:SelectHandle}" TargetType="atom:SelectHandle">
        <Setter Property="Template">
            <ControlTemplate>
                <Panel>
                    <atom:IconPresenter Name="OpenIndicator" IsVisible="True"
                                        Icon="{TemplateBinding OpenIndicator}"
                                        IsMotionEnabled="{TemplateBinding IsMotionEnabled}" />
                    <atom:IconPresenter Name="LoadingIndicator"
                                        Icon="{TemplateBinding LoadingIcon}"
                                        IsMotionEnabled="{TemplateBinding IsMotionEnabled}"
                                        IsVisible="False"/>
                    <antdicons:SearchOutlined Name="SearchIndicator"
                                              IsMotionEnabled="{TemplateBinding IsMotionEnabled}"
                                              IsVisible="False" />
                    <atom:InputClearIconButton
                        Name="{x:Static atom:SelectHandleThemeConstants.ClearButtonPart}"
                        IsMotionEnabled="{TemplateBinding IsMotionEnabled}"
                        IsVisible="False" />
                </Panel>
            </ControlTemplate>
        </Setter>

        <Style Selector="^ /template/ atom|IconPresenter">
            <Setter Property="IconBrush"
                    Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorTextQuaternary}}" />
            <Setter Property="Width" Value="{DynamicResource {x:Static atom:SharedTokenKey.IconSize}}" />
            <Setter Property="Height" Value="{DynamicResource {x:Static atom:SharedTokenKey.IconSize}}" />
        </Style>

        <Style Selector="^[IsLoading=True]">
            <Style Selector="^ /template/ atom|IconPresenter#OpenIndicator">
                <Setter Property="IsVisible" Value="False" />
            </Style>
            <Style Selector="^ /template/ atom|IconPresenter#LoadingIndicator">
                <Setter Property="IsVisible" Value="True" />
            </Style>
        </Style>

        <Style Selector="^[IsFilterEnabled=True][IsDropDownOpen=True]">
            <Style Selector="^ /template/ atom|IconPresenter#OpenIndicator">
                <Setter Property="IsVisible" Value="False" />
            </Style>
            <Style Selector="^ /template/ atom|IconPresenter#SearchIndicator">
                <Setter Property="IsVisible" Value="True" />
            </Style>
        </Style>

        <Style Selector="^[IsClearable=True]">
            <Style Selector="^[IsSelectionEmpty=False]">
                <Style Selector="^[IsInputHover=True], ^[IsInputPressed=True]">
                    <Style Selector="^ /template/ atom|IconPresenter#OpenIndicator">
                        <Setter Property="IsVisible" Value="False" />
                    </Style>
                    <Style Selector="^ /template/ atom|IconPresenter#SearchIndicator">
                        <Setter Property="IsVisible" Value="False" />
                    </Style>
                    <Style Selector="^ /template/ atom|InputClearIconButton#PART_ClearButton">
                        <Setter Property="IsVisible" Value="True" />
                    </Style>
                </Style>
            </Style>
        </Style>

    </ControlTheme>
</ResourceDictionary>