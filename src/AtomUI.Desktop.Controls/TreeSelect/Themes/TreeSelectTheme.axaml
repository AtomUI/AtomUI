<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net"
    xmlns:converters="clr-namespace:AtomUI.Desktop.Controls.Converters"
    x:ClassModifier="internal">
    <converters:TreeItemDataConverter x:Key="TreeItemDataConverter" />
    <ControlTheme x:Key="{x:Type atom:TreeSelect}" TargetType="atom:TreeSelect">
        <Setter Property="Template">
            <ControlTemplate>
                <Panel>
                    <atom:TreeSelectAddOnDecoratedBox
                        Name="{x:Static atom:AddOnDecoratedBox.AddOnDecoratedBoxPart}"
                        StyleVariant="{TemplateBinding StyleVariant}"
                        SizeType="{TemplateBinding SizeType}"
                        Status="{TemplateBinding Status}"
                        LeftAddOn="{TemplateBinding LeftAddOn}"
                        LeftAddOnTemplate="{TemplateBinding LeftAddOnTemplate}"
                        RightAddOn="{TemplateBinding RightAddOn}"
                        RightAddOnTemplate="{TemplateBinding RightAddOnTemplate}"
                        IsEnabled="{TemplateBinding IsEnabled}"
                        ContentLeftAddOn="{TemplateBinding ContentLeftAddOn}"
                        ContentLeftAddOnTemplate="{TemplateBinding ContentLeftAddOnTemplate}"
                        IsMultiple="{TemplateBinding IsMultiple}"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        IsSelectionEmpty="{TemplateBinding IsSelectionEmpty}"
                        IsDropDownOpen="{TemplateBinding IsDropDownOpen}">
                        <atom:AddOnDecoratedBox.ContentRightAddOn>
                            <StackPanel Orientation="Horizontal"
                                        Spacing="{DynamicResource {x:Static atom:SharedTokenKey.SpacingXS}}">
                                <atom:SelectMaxCountIndicator
                                    MaxCount="{Binding MaxCount, RelativeSource={RelativeSource AncestorType=atom:TreeSelect}}"
                                    SelectedCount="{Binding SelectedCount, RelativeSource={RelativeSource AncestorType=atom:TreeSelect}}"
                                    IsVisible="{Binding IsShowMaxCountIndicator, RelativeSource={RelativeSource AncestorType=atom:TreeSelect}}" />
                                <ContentPresenter
                                    Content="{Binding ContentRightAddOn, RelativeSource={RelativeSource AncestorType=atom:TreeSelect}}"
                                    ContentTemplate="{Binding ContentLeftAddOnTemplate, RelativeSource={RelativeSource AncestorType=atom:TreeSelect}}"
                                    IsVisible="{Binding ContentRightAddOn, RelativeSource={RelativeSource AncestorType=atom:TreeSelect}, Converter={x:Static ObjectConverters.IsNotNull}}" />
                                <atom:SelectHandle
                                    IsFilterEnabled="{Binding IsFilterEnabled, RelativeSource={RelativeSource AncestorType=atom:TreeSelect}}"
                                    IsEnabled="{Binding IsEnabled, RelativeSource={RelativeSource AncestorType=atom:TreeSelect}}"
                                    IsMotionEnabled="{Binding IsMotionEnabled, RelativeSource={RelativeSource AncestorType=atom:TreeSelect}}"
                                    IsLoading="{Binding IsLoading, RelativeSource={RelativeSource AncestorType=atom:TreeSelect}}"
                                    IsClearable="{Binding IsAllowClear, RelativeSource={RelativeSource AncestorType=atom:TreeSelect}}"
                                    IsSelectionEmpty="{Binding IsSelectionEmpty, RelativeSource={RelativeSource AncestorType=atom:TreeSelect}}"
                                    IsDropDownOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource AncestorType=atom:TreeSelect}}"
                                    IsInputHover="{Binding IsInnerBoxHover, RelativeSource={RelativeSource AncestorType=atom:AddOnDecoratedBox}}"
                                    IsInputPressed="{Binding IsInnerBoxPressed, RelativeSource={RelativeSource AncestorType=atom:AddOnDecoratedBox}}" />
                            </StackPanel>
                        </atom:AddOnDecoratedBox.ContentRightAddOn>
                        <Panel>
                            <atom:TextBlock
                                Name="PlaceholderText"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                TextTrimming="CharacterEllipsis"
                                Text="{TemplateBinding PlaceholderText}"
                                IsVisible="{TemplateBinding IsPlaceholderTextVisible}"
                                Foreground="{TemplateBinding PlaceholderForeground}" />
                            <ContentPresenter Name="SingleSelectResultPresenter"
                                              Content="{TemplateBinding SelectedItem}"
                                              IsVisible="False">
                                <ContentPresenter.ContentTemplate>
                                    <DataTemplate x:DataType="atom:ITreeViewItemData">
                                        <TextBlock Text="{Binding Header}" />
                                    </DataTemplate>
                                </ContentPresenter.ContentTemplate>
                            </ContentPresenter>
                            <atom:SelectFilterTextBox
                                Name="{x:Static atom:TreeSelectThemeConstants.SingleFilterInputPart}"
                                IsVisible="False"
                                SizeType="{TemplateBinding SizeType}"
                                Watermark="{TemplateBinding SelectedItem, Converter={StaticResource TreeItemDataConverter}}" />
                            <atom:TreeSelectTagAwareTextBox
                                Name="SelectedItemsBox"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                ShowCheckedStrategy="{TemplateBinding ShowCheckedStrategy}"
                                SizeType="{TemplateBinding SizeType}"
                                SelectedItems="{TemplateBinding SelectedItems}"
                                IsFilterEnabled="{TemplateBinding IsFilterEnabled}"
                                IsDropDownOpen="{TemplateBinding IsDropDownOpen}"
                                MaxTagCount="{TemplateBinding MaxTagCount}"
                                IsResponsiveTagMode="{TemplateBinding IsResponsiveTagMode}"
                                IsVisible="False"
                                Focusable="True" />
                        </Panel>
                    </atom:TreeSelectAddOnDecoratedBox>
                    <atom:Popup Name="{x:Static atom:TreeSelectThemeConstants.PopupPart}"
                                WindowManagerAddShadowHint="False"
                                IsLightDismissEnabled="False"
                                IsDetectMouseClickEnabled="True"
                                Placement="BottomEdgeAlignedLeft"
                                ShouldUseOverlayLayer="True"
                                IsMotionAwareOpen="{TemplateBinding IsDropDownOpen, Mode=TwoWay}">
                        <Border Name="PopupFrame"
                                MaxHeight="{TemplateBinding MaxPopupHeight}"
                                MinWidth="{TemplateBinding EffectivePopupWidth}"
                                Padding="{TemplateBinding PopupContentPadding}">
                            <atom:TreeSelectTreeView Name="{x:Static atom:TreeSelectThemeConstants.TreeViewPart}"
                                                     AutoScrollToSelectedItem="{TemplateBinding AutoScrollToSelectedItem}"
                                                     HorizontalAlignment="Stretch"
                                                     VerticalAlignment="Stretch"
                                                     NodeHoverMode="Block"
                                                     ToggleType="{TemplateBinding TreeViewToggleType}"
                                                     IsDefaultExpandAll="{TemplateBinding IsTreeDefaultExpandAll}"
                                                     ItemFilterValue="{TemplateBinding ActivateFilterValue}"
                                                     ItemFilter="{TemplateBinding ItemFilter}"
                                                     ItemFilterAction="{TemplateBinding ItemFilterAction}"
                                                     ItemsSource="{TemplateBinding TreeItemsSource}"
                                                     ItemTemplate="{TemplateBinding TreeItemTemplate}"
                                                     ItemDataLoader="{TemplateBinding TreeItemDataLoader}"
                                                     FilterHighlightForeground="{TemplateBinding FilterHighlightForeground}"
                                                     SelectionMode="{TemplateBinding TreeViewSelectionMode}"
                                                     IsSelectable="{TemplateBinding IsTreeViewSelectable}"
                                                     IsCheckStrictly="{TemplateBinding IsTreeCheckStrictly}"
                                                     IsShowIcon="{TemplateBinding IsShowIcon}"
                                                     IsShowLeafIcon="{TemplateBinding IsShowLeafIcon}"
                                                     IsShowLine="{TemplateBinding IsShowLine}"
                                                     IsShowEmptyIndicator="{TemplateBinding IsShowEmptyIndicator}"
                                                     IsSwitcherRotation="{TemplateBinding IsSwitcherRotation}"
                                                     />
                        </Border>
                    </atom:Popup>
                </Panel>
            </ControlTemplate>
        </Setter>
        <Setter Property="FilterHighlightForeground"
                Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorPrimary}}" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="KeyboardNavigation.TabNavigation" Value="None" />
        <Setter Property="IsMotionEnabled" Value="{DynamicResource {x:Static atom:SharedTokenKey.EnableMotion}}" />
        <Setter Property="PopupContentPadding"
                Value="{DynamicResource {x:Static atom:SelectTokenKey.PopupContentPadding}}" />
        <Setter Property="ItemHeight" Value="{DynamicResource {x:Static atom:SharedTokenKey.ControlHeight}}" />
        <Setter Property="PlaceholderForeground"
                Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorTextPlaceholder}}" />

        <Style Selector="^[SizeType=Large]">
            <Setter Property="FontSize" Value="{DynamicResource {x:Static atom:SharedTokenKey.FontSizeLG}}" />
        </Style>
        <Style Selector="^[SizeType=Middle]">
            <Setter Property="FontSize" Value="{DynamicResource {x:Static atom:SharedTokenKey.FontSize}}" />
        </Style>
        <Style Selector="^[SizeType=Small]">
            <Setter Property="FontSize" Value="{DynamicResource {x:Static atom:SharedTokenKey.FontSize}}" />
        </Style>

        <Style Selector="^ /template/ atom|Popup#PART_Popup">
            <Setter Property="MarginToAnchor"
                    Value="{DynamicResource {x:Static atom:ComboBoxTokenKey.PopupMarginToAnchor}}" />
            <Setter Property="MaskShadows" Value="{DynamicResource {x:Static atom:ComboBoxTokenKey.PopupBoxShadows}}" />
        </Style>
        <Style Selector="^ /template/ Border#PopupFrame">
            <Setter Property="Background" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorBgElevated}}" />
            <Setter Property="CornerRadius"
                    Value="{DynamicResource {x:Static atom:ComboBoxTokenKey.PopupBorderRadius}}" />
        </Style>

        <Style Selector="^[IsMultiple=False]">
            <Style Selector="^[IsFilterEnabled=False]">
                <Style Selector="^ /template/ atom|TreeSelectAddOnDecoratedBox#PART_AddOnDecoratedBox">
                    <Setter Property="Cursor" Value="Hand" />
                </Style>

                <Style Selector="^ /template/ ContentPresenter#SingleSelectResultPresenter">
                    <Setter Property="IsVisible" Value="True" />
                    <Setter Property="Foreground"
                            Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorText}}" />
                </Style>
                <Style Selector="^[IsDropDownOpen=True]">
                    <Style Selector="^ /template/ ContentPresenter#SingleSelectResultPresenter">
                        <Setter Property="Foreground"
                                Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorTextPlaceholder}}" />
                    </Style>
                </Style>
            </Style>
            <Style Selector="^[IsFilterEnabled=True]">
                <Style Selector="^ /template/ atom|SelectFilterTextBox#PART_SingleFilterInput">
                    <Setter Property="IsVisible" Value="True" />
                    <Setter Property="WatermarkForeground"
                            Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorText}}" />
                </Style>
                <Style Selector="^[IsDropDownOpen=True]">
                    <Style Selector="^ /template/ atom|SelectFilterTextBox#PART_SingleFilterInput">
                        <Setter Property="WatermarkForeground"
                                Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorTextPlaceholder}}" />
                    </Style>
                </Style>
            </Style>
        </Style>

        <Style Selector="^[IsMultiple=True]">
            <Style Selector="^ /template/ atom|TreeSelectTagAwareTextBox#SelectedItemsBox">
                <Setter Property="IsVisible" Value="True" />
            </Style>
            <Style Selector="^[IsFilterEnabled=False]">
                <Style Selector="^ /template/ atom|SelectAddOnDecoratedBox#PART_AddOnDecoratedBox">
                    <Setter Property="Cursor" Value="Hand" />
                </Style>
            </Style>
        </Style>

        <Setter Property="TreeItemTemplate">
            <TreeDataTemplate x:DataType="atom:ITreeViewItemData"
                              ItemsSource="{Binding Children}">
                <atom:TextBlock Text="{Binding Header}" />
            </TreeDataTemplate>
        </Setter>

    </ControlTheme>
</ResourceDictionary>