<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net"
    x:ClassModifier="internal">
    <ControlTheme x:Key="{x:Type atom:Timeline}" TargetType="atom:Timeline">
        <Setter Property="Template">
            <ControlTemplate>
                <Border Name="{x:Static atom:TimelineThemeConstants.FramePart}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        Background="{TemplateBinding Background}"
                        Padding="{TemplateBinding Padding}">
                    <atom:ScrollViewer Name="{x:Static atom:TimelineThemeConstants.ScrollViewerPart}"
                                       IsLiteMode="{TemplateBinding atom:ScrollViewer.IsLiteMode}"
                                       AllowAutoHide="{TemplateBinding atom:ScrollViewer.AllowAutoHide}"
                                       HorizontalScrollBarVisibility="Disabled"
                                       VerticalScrollBarVisibility="Auto"
                                       IsScrollChainingEnabled="{TemplateBinding atom:ScrollViewer.IsScrollChainingEnabled}">
                        <ItemsPresenter Name="{x:Static atom:TimelineThemeConstants.ItemsPresenterPart}">
                            <ItemsPresenter.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <atom:TimelineStackPanel
                                        IsReverse="{Binding IsReverse, RelativeSource={RelativeSource AncestorType=atom:Timeline}}" />
                                </ItemsPanelTemplate>
                            </ItemsPresenter.ItemsPanel>
                        </ItemsPresenter>
                    </atom:ScrollViewer>
                </Border>
            </ControlTemplate>
        </Setter>
        <Setter Property="atom:ScrollViewer.IsLiteMode" Value="True" />
        <Setter Property="atom:ScrollViewer.AllowAutoHide" Value="True" />
        <Setter Property="atom:ScrollViewer.IsScrollChainingEnabled" Value="False" />
        <Setter Property="TemplatedControl.BorderBrush"
                Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorBorder}}" />
        <Setter Property="TemplatedControl.Background"
                Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorBgContainer}}" />

    </ControlTheme>
</ResourceDictionary>