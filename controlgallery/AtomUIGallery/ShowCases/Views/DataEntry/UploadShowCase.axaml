<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AtomUIGallery.ShowCases.Views.UploadShowCase"
             xmlns:atom="https://atomui.net"
             xmlns:antdicons="https://atomui.net/icons/antdesign"
             xmlns:gallery="https://atomui.net/oss-controls/gallery">
    <gallery:ShowCasePanel>
        <gallery:ShowCaseItem
            Title="Upload by clicking"
            Description="Classic mode. File selection dialog pops up when upload button is clicked.">
            <atom:Upload Name="BasicUpload">
                <atom:Button Icon="{antdicons:AntDesignIconProvider UploadOutlined}">Click to Upload</atom:Button>
            </atom:Upload>
        </gallery:ShowCaseItem>
        
        <gallery:ShowCaseItem
            Title="Avatar"
            Description="Click to upload user's avatar, and validate size and format of picture with beforeUpload.">
            <StackPanel Orientation="Horizontal" Spacing="20">
                <atom:Upload Name="AvatarDemoPictureCardUpload" ListType="PictureCard">
                   <StackPanel Orientation="Vertical">
                       <Panel>
                           <antdicons:PlusOutlined IsVisible="{Binding IsTaskRunning ,RelativeSource={RelativeSource AncestorType=atom:Upload}, Converter={x:Static BoolConverters.Not}}"/>
                           <antdicons:LoadingOutlined IsVisible="{Binding IsTaskRunning ,RelativeSource={RelativeSource AncestorType=atom:Upload}}"
                                                      LoadingAnimation="Spin"/>
                       </Panel>
                       <TextBlock Margin="0, 8, 0, 0">Upload</TextBlock>
                   </StackPanel>
                </atom:Upload>
                <atom:Upload Name="AvatarDemoPictureCircleUpload" ListType="PictureCircle">
                    <StackPanel Orientation="Vertical">
                        <antdicons:PlusOutlined/>
                        <TextBlock Margin="0, 8, 0, 0">Upload</TextBlock>
                    </StackPanel>
                </atom:Upload>
            </StackPanel>
        </gallery:ShowCaseItem>
        
        <gallery:ShowCaseItem
            Title="Default Files"
            Description="Use defaultFileList for uploaded files when page init."
            IsOccupyEntireRow="True">
            <atom:Upload Name="DefaultFileList" DefaultTaskList="{Binding DefaultTaskList}">
                <atom:Button Icon="{antdicons:AntDesignIconProvider UploadOutlined}">Click to Upload</atom:Button>
            </atom:Upload>
        </gallery:ShowCaseItem>
        
        <gallery:ShowCaseItem
            Title="Pictures Wall"
            Description="After users upload picture, the thumbnail will be shown in list. The upload button will disappear when count meets limitation."
            IsOccupyEntireRow="True">
            <atom:Upload Name="PicturesWallUpload" DefaultTaskList="{Binding PicturesWallDefaultTaskList}" ListType="PictureCard">
                <StackPanel Orientation="Vertical">
                    <antdicons:PlusOutlined/>
                    <TextBlock Margin="0, 8, 0, 0">Upload</TextBlock>
                </StackPanel>
            </atom:Upload>
        </gallery:ShowCaseItem>
        
        <gallery:ShowCaseItem
            Title="Pictures with picture-circle type"
            Description="Alternative display for picture-card."
            IsOccupyEntireRow="True">
            <atom:Upload Name="PicturesCircleWallUpload" DefaultTaskList="{Binding PicturesWallDefaultTaskList}" ListType="PictureCircle">
                <StackPanel Orientation="Vertical">
                    <antdicons:PlusOutlined/>
                    <TextBlock Margin="0, 8, 0, 0">Upload</TextBlock>
                </StackPanel>
            </atom:Upload>
        </gallery:ShowCaseItem>
        
        <gallery:ShowCaseItem
            Title="Drag and Drop"
            Description="You can drag files to a specific area, to upload. Alternatively, you can also upload by selecting."
            IsOccupyEntireRow="True">
            <atom:Upload Name="DragAndDropUpload">
                <atom:UploadDefaultDropArea/>
            </atom:Upload>
        </gallery:ShowCaseItem>
        
        <gallery:ShowCaseItem
            Title="Pictures with list style"
            Description="If uploaded file is a picture, the thumbnail can be shown. ">
            <atom:Upload Name="PictureListUpload" DefaultTaskList="{Binding PictureListStyleDefaultTaskList}" ListType="Picture">
                <atom:Button Icon="{antdicons:AntDesignIconProvider UploadOutlined}" ButtonType="Primary">Click to Upload</atom:Button>
            </atom:Upload>
        </gallery:ShowCaseItem>
        
        <gallery:ShowCaseItem
            Title="Max Count"
            Description="Limit files with maxCount. Will replace current one when maxCount is 1. ">
            <StackPanel Orientation="Vertical" Spacing="20">
                <atom:Upload Name="MaxCount1Upload" MaxCount="1">
                    <atom:Button Icon="{antdicons:AntDesignIconProvider UploadOutlined}">Upload (Max: 1)</atom:Button>
                </atom:Upload>
        
                <atom:Upload Name="MaxCount3Upload" MaxCount="3" IsMultipleEnabled="True">
                    <atom:Button Icon="{antdicons:AntDesignIconProvider UploadOutlined}">Upload (Max: 3)</atom:Button>
                </atom:Upload>
            </StackPanel>
        </gallery:ShowCaseItem>
        
        <gallery:ShowCaseItem
            Title="Upload directory"
            Description="You can select and upload a whole directory.">
            <atom:Upload Name="DirectoryUpload" IsUploadDirectoryEnabled="True">
                <atom:Button Icon="{antdicons:AntDesignIconProvider UploadOutlined}">Upload Directory</atom:Button>
            </atom:Upload>
        </gallery:ShowCaseItem>
        
        <gallery:ShowCaseItem
            Title="Upload png file only"
            Description="beforeUpload only prevent upload behavior when return false or reject promise, the prevented file would still show in file list. Here is the example you can keep prevented files out of list by return UPLOAD.LIST_IGNORE.">
            <atom:Upload Name="PngOnlyUpload" Accepts="*.png">
                <atom:Button Icon="{antdicons:AntDesignIconProvider UploadOutlined}">Upload png only</atom:Button>
            </atom:Upload>
        </gallery:ShowCaseItem>
    </gallery:ShowCasePanel>
</UserControl>