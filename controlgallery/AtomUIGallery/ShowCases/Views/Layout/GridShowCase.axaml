<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AtomUIGallery.ShowCases.Views.GridShowCase"
             xmlns:atom="https://atomui.net"
             xmlns:gallery="https://atomui.net/oss-controls/gallery">
    <UserControl.Styles>
        <Style Selector="Border.grid-cell">
            <Setter Property="Height" Value="48" />
            <Setter Property="Background" Value="#1677FF" />
        </Style>
        <Style Selector="Border.grid-cell.alt">
            <Setter Property="Background" Value="#4096FF" />
        </Style>
        <Style Selector="Border.grid-row-surface">
            <Setter Property="Background" Value="#F5F5F5" />
            <Setter Property="Padding" Value="8" />
        </Style>
        <Style Selector="TextBlock.grid-cell-text">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>
        <Style Selector="TextBlock.grid-section-title">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="0,8,0,4" />
        </Style>
    </UserControl.Styles>

    <gallery:ShowCasePanel>
        <gallery:ShowCaseItem Title="Basic Grid" Description="Basic 24-column layout." IsOccupyEntireRow="True">
            <StackPanel Margin="20" Spacing="12">
                <atom:Row Gutter="16,16">
                    <atom:Col Span="24">
                        <Border Classes="grid-cell">
                            <TextBlock Classes="grid-cell-text">col</TextBlock>
                        </Border>
                    </atom:Col>
                </atom:Row>
                <atom:Row Gutter="16,16">
                    <atom:Col Span="12">
                        <Border Classes="grid-cell">
                            <TextBlock Classes="grid-cell-text">col-12</TextBlock>
                        </Border>
                    </atom:Col>
                    <atom:Col Span="12">
                        <Border Classes="grid-cell alt">
                            <TextBlock Classes="grid-cell-text">col-12</TextBlock>
                        </Border>
                    </atom:Col>
                </atom:Row>
                <atom:Row Gutter="16,16">
                    <atom:Col Span="8">
                        <Border Classes="grid-cell">
                            <TextBlock Classes="grid-cell-text">col-8</TextBlock>
                        </Border>
                    </atom:Col>
                    <atom:Col Span="8">
                        <Border Classes="grid-cell alt">
                            <TextBlock Classes="grid-cell-text">col-8</TextBlock>
                        </Border>
                    </atom:Col>
                    <atom:Col Span="8">
                        <Border Classes="grid-cell">
                            <TextBlock Classes="grid-cell-text">col-8</TextBlock>
                        </Border>
                    </atom:Col>
                </atom:Row>
                <atom:Row Gutter="16,16">
                    <atom:Col Span="6">
                        <Border Classes="grid-cell">
                            <TextBlock Classes="grid-cell-text">col-6</TextBlock>
                        </Border>
                    </atom:Col>
                    <atom:Col Span="6">
                        <Border Classes="grid-cell alt">
                            <TextBlock Classes="grid-cell-text">col-6</TextBlock>
                        </Border>
                    </atom:Col>
                    <atom:Col Span="6">
                        <Border Classes="grid-cell">
                            <TextBlock Classes="grid-cell-text">col-6</TextBlock>
                        </Border>
                    </atom:Col>
                    <atom:Col Span="6">
                        <Border Classes="grid-cell alt">
                            <TextBlock Classes="grid-cell-text">col-6</TextBlock>
                        </Border>
                    </atom:Col>
                </atom:Row>
            </StackPanel>
        </gallery:ShowCaseItem>

        <gallery:ShowCaseItem Title="Gutter" Description="Horizontal, vertical, and responsive gutter." IsOccupyEntireRow="True">
            <StackPanel Margin="20" Spacing="12">
                <TextBlock Classes="grid-section-title">Horizontal</TextBlock>
                <atom:Row Gutter="16,16">
                    <atom:Col Span="6">
                        <Border Classes="grid-cell">
                            <TextBlock Classes="grid-cell-text">col-6</TextBlock>
                        </Border>
                    </atom:Col>
                    <atom:Col Span="6">
                        <Border Classes="grid-cell alt">
                            <TextBlock Classes="grid-cell-text">col-6</TextBlock>
                        </Border>
                    </atom:Col>
                    <atom:Col Span="6">
                        <Border Classes="grid-cell">
                            <TextBlock Classes="grid-cell-text">col-6</TextBlock>
                        </Border>
                    </atom:Col>
                    <atom:Col Span="6">
                        <Border Classes="grid-cell alt">
                            <TextBlock Classes="grid-cell-text">col-6</TextBlock>
                        </Border>
                    </atom:Col>
                </atom:Row>

                <TextBlock Classes="grid-section-title">Responsive</TextBlock>
                <atom:Row Gutter="16,16">
                    <atom:Col Xs="24" Sm="12" Md="16" Lg="6" Xl="6">
                        <Border Classes="grid-cell">
                            <TextBlock Classes="grid-cell-text">col-6</TextBlock>
                        </Border>
                    </atom:Col>
                    <atom:Col Xs="24" Sm="12" Md="16" Lg="6" Xl="6">
                        <Border Classes="grid-cell alt">
                            <TextBlock Classes="grid-cell-text">col-6</TextBlock>
                        </Border>
                    </atom:Col>
                    <atom:Col Xs="24" Sm="12" Md="16" Lg="6" Xl="6">
                        <Border Classes="grid-cell">
                            <TextBlock Classes="grid-cell-text">col-6</TextBlock>
                        </Border>
                    </atom:Col>
                    <atom:Col Xs="24" Sm="12" Md="16" Lg="6" Xl="6">
                        <Border Classes="grid-cell alt">
                            <TextBlock Classes="grid-cell-text">col-6</TextBlock>
                        </Border>
                    </atom:Col>
                </atom:Row>

                <TextBlock Classes="grid-section-title">Vertical</TextBlock>
                <atom:Row Gutter="16,24" Wrap="True">
                    <atom:Col Span="6">
                        <Border Classes="grid-cell">
                            <TextBlock Classes="grid-cell-text">col-6</TextBlock>
                        </Border>
                    </atom:Col>
                    <atom:Col Span="6">
                        <Border Classes="grid-cell alt">
                            <TextBlock Classes="grid-cell-text">col-6</TextBlock>
                        </Border>
                    </atom:Col>
                    <atom:Col Span="6">
                        <Border Classes="grid-cell">
                            <TextBlock Classes="grid-cell-text">col-6</TextBlock>
                        </Border>
                    </atom:Col>
                    <atom:Col Span="6">
                        <Border Classes="grid-cell alt">
                            <TextBlock Classes="grid-cell-text">col-6</TextBlock>
                        </Border>
                    </atom:Col>
                    <atom:Col Span="6">
                        <Border Classes="grid-cell">
                            <TextBlock Classes="grid-cell-text">col-6</TextBlock>
                        </Border>
                    </atom:Col>
                    <atom:Col Span="6">
                        <Border Classes="grid-cell alt">
                            <TextBlock Classes="grid-cell-text">col-6</TextBlock>
                        </Border>
                    </atom:Col>
                    <atom:Col Span="6">
                        <Border Classes="grid-cell">
                            <TextBlock Classes="grid-cell-text">col-6</TextBlock>
                        </Border>
                    </atom:Col>
                    <atom:Col Span="6">
                        <Border Classes="grid-cell alt">
                            <TextBlock Classes="grid-cell-text">col-6</TextBlock>
                        </Border>
                    </atom:Col>
                </atom:Row>

                <TextBlock Classes="grid-section-title">Gutter (string)</TextBlock>
                <atom:Row Gutter="16">
                    <atom:Col Span="6">
                        <Border Classes="grid-cell">
                            <TextBlock Classes="grid-cell-text">col-6</TextBlock>
                        </Border>
                    </atom:Col>
                    <atom:Col Span="6">
                        <Border Classes="grid-cell alt">
                            <TextBlock Classes="grid-cell-text">col-6</TextBlock>
                        </Border>
                    </atom:Col>
                    <atom:Col Span="6">
                        <Border Classes="grid-cell">
                            <TextBlock Classes="grid-cell-text">col-6</TextBlock>
                        </Border>
                    </atom:Col>
                    <atom:Col Span="6">
                        <Border Classes="grid-cell alt">
                            <TextBlock Classes="grid-cell-text">col-6</TextBlock>
                        </Border>
                    </atom:Col>
                </atom:Row>
            </StackPanel>
        </gallery:ShowCaseItem>

        <gallery:ShowCaseItem Title="Offset" Description="Move columns to the right." IsOccupyEntireRow="True">
            <StackPanel Margin="20" Spacing="12">
                <atom:Row Gutter="16,16">
                    <atom:Col Span="8">
                        <Border Classes="grid-cell">
                            <TextBlock Classes="grid-cell-text">col-8</TextBlock>
                        </Border>
                    </atom:Col>
                    <atom:Col Span="8" Offset="8">
                        <Border Classes="grid-cell alt">
                            <TextBlock Classes="grid-cell-text">col-8 col-offset-8</TextBlock>
                        </Border>
                    </atom:Col>
                </atom:Row>
                <atom:Row Gutter="16,16">
                    <atom:Col Span="6" Offset="6">
                        <Border Classes="grid-cell">
                            <TextBlock Classes="grid-cell-text">col-6 col-offset-6</TextBlock>
                        </Border>
                    </atom:Col>
                </atom:Row>
                <atom:Row Gutter="16,16">
                    <atom:Col Span="12" Offset="6">
                        <Border Classes="grid-cell alt">
                            <TextBlock Classes="grid-cell-text">col-12 col-offset-6</TextBlock>
                        </Border>
                    </atom:Col>
                </atom:Row>
                <atom:Row Gutter="16,16">
                    <atom:Col Span="6" Offset="18">
                        <Border Classes="grid-cell">
                            <TextBlock Classes="grid-cell-text">col-6 col-offset-18</TextBlock>
                        </Border>
                    </atom:Col>
                </atom:Row>
            </StackPanel>
        </gallery:ShowCaseItem>

        <gallery:ShowCaseItem Title="Push &amp; Pull" Description="Change column order with push/pull." IsOccupyEntireRow="True">
            <StackPanel Margin="20" Spacing="12">
                <atom:Row Gutter="16,16">
                    <atom:Col Span="18" Push="6">
                        <Border Classes="grid-cell alt">
                            <TextBlock Classes="grid-cell-text">col-18 col-push-6</TextBlock>
                        </Border>
                    </atom:Col>
                    <atom:Col Span="6" Pull="18">
                        <Border Classes="grid-cell">
                            <TextBlock Classes="grid-cell-text">col-6 col-pull-18</TextBlock>
                        </Border>
                    </atom:Col>
                </atom:Row>
            </StackPanel>
        </gallery:ShowCaseItem>

        <gallery:ShowCaseItem Title="Justify" Description="Sub-element alignment on the main axis." IsOccupyEntireRow="True">
