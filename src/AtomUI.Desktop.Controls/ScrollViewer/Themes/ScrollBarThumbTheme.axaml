<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net"
    x:ClassModifier="internal">
    <ControlTheme x:Key="{x:Type atom:ScrollBarThumb}" TargetType="atom:ScrollBarThumb">
        <Setter Property="Template">
            <ControlTemplate>
                <Border Name="Frame"
                        UseLayoutRounding="False"
                        Background="{TemplateBinding Background}"
                        Margin="{TemplateBinding Margin}"/>
            </ControlTemplate>
        </Setter>
        
        <Setter Property="Background" Value="{DynamicResource {x:Static atom:ScrollViewerTokenKey.ThumbBg}}"/>
        <Style Selector="^ /template/ Border#Frame">
            <Setter Property="CornerRadius" Value="{DynamicResource {x:Static atom:ScrollViewerTokenKey.NormalModeThumbCornerRadius}}"/>
        </Style>
        
        <Style Selector="^:pointerover">
            <Setter Property="Background" Value="{DynamicResource {x:Static atom:ScrollViewerTokenKey.ThumbHoverBg}}"/>
        </Style>
    </ControlTheme>
</ResourceDictionary>