                        </atom:Col>
                    </atom:Row>
                </Border>

                <TextBlock Classes="grid-section-title">sub-element align around</TextBlock>
                <Border Classes="grid-row-surface">
                    <atom:Row Gutter="16,16" Justify="SpaceAround">
                        <atom:Col Span="4">
                            <Border Classes="grid-cell">
                                <TextBlock Classes="grid-cell-text">col-4</TextBlock>
                            </Border>
                        </atom:Col>
                        <atom:Col Span="4">
                            <Border Classes="grid-cell alt">
                                <TextBlock Classes="grid-cell-text">col-4</TextBlock>
