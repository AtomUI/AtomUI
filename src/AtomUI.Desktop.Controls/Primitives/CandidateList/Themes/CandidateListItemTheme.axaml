<ControlTheme TargetType="atom:CandidateListItem"
              xmlns="https://github.com/avaloniaui"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:atom="https://atomui.net"
              x:Class="AtomUI.Desktop.Controls.Primitives.Themes.CandidateListItemTheme">
    <ControlTheme.BasedOn>
        <atom:ListBoxItemTheme TargetType="atom:CandidateListItem" />
    </ControlTheme.BasedOn>
    
    <Style Selector="^:is(atom|CandidateListItem)">
        <Style Selector="^[IsSelected=False][IsCandidateSelected=True]">
            <Setter Property="Background" Value="{Binding ItemHoverBg, RelativeSource={RelativeSource Self}}" />
        </Style>
    </Style>
    
</ControlTheme>