        <gallery:ShowCaseItem Title="Align" Description="Sub-element alignment on the cross axis." IsOccupyEntireRow="True">
            <StackPanel Margin="20" Spacing="12">
                <TextBlock Classes="grid-section-title">Align Top</TextBlock>
                <Border Classes="grid-row-surface">
                    <atom:Row Gutter="16,16" Justify="center" Align="top">
                        <atom:Col Span="4">
                            <Border Classes="grid-cell" Height="72">
                                <TextBlock Classes="grid-cell-text">col-4</TextBlock>
                            </Border>
                        </atom:Col>
                        <atom:Col Span="4">
                            <Border Classes="grid-cell alt" Height="48">
                                <TextBlock Classes="grid-cell-text">col-4</TextBlock>
                            </Border>
                        </atom:Col>
                        <atom:Col Span="4">
                            <Border Classes="grid-cell" Height="64">
                                <TextBlock Classes="grid-cell-text">col-4</TextBlock>
                            </Border>
                        </atom:Col>
                        <atom:Col Span="4">
                            <Border Classes="grid-cell alt" Height="56">
