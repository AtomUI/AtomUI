<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net"
    xmlns:antdicons="https://atomui.net/icons/antdesign"
    x:ClassModifier="internal">
    <ControlTheme x:Key="{x:Type atom:UploadPictureUploadingContent}" TargetType="atom:UploadPictureUploadingContent">
        <ControlTheme.BasedOn>
            <atom:AbstractUploadPictureContentTheme TargetType="atom:UploadPictureUploadingContent" />
        </ControlTheme.BasedOn>
        <Setter Property="Template">
            <ControlTemplate>
                <atom:DashedBorder Name="Frame"
                                   Background="{TemplateBinding Background}"
                                   BorderBrush="{TemplateBinding BorderBrush}"
                                   BorderThickness="{TemplateBinding BorderThickness}"
                                   CornerRadius="{TemplateBinding CornerRadius}"
                                   Padding="{TemplateBinding Padding}">
                    <DockPanel LastChildFill="True" Name="ContentLayout">
                        <antdicons:LoadingOutlined Name="LoadingIndicator" DockPanel.Dock="Left" LoadingAnimation="Spin"/>
                        <atom:IconButton Icon="{antdicons:AntDesignIconProvider DeleteOutlined}"
                                         DockPanel.Dock="Right"
                                         Tag="{x:Static atom:UploadListActions.Remove}" 
                                         VerticalAlignment="Center"/>
                        <StackPanel Name="ProgressLayout" VerticalAlignment="Center" Orientation="Vertical">
                            <TextBlock Text="{TemplateBinding FileName}"
                                       TextTrimming="{x:Static TextTrimming.CharacterEllipsis}" />
                            <atom:ProgressBar SizeType="Small" 
                                              IsShowProgressInfo="False"
                                              Value="{TemplateBinding Progress}"/>
                        </StackPanel>
                    </DockPanel>
                </atom:DashedBorder>
            </ControlTemplate>
        </Setter>

        <Style Selector="^ /template/ atom|DashedBorder#Frame">
            <Setter Property="StrokeDashArray" Value="4, 2" />
        </Style>

        <Style Selector="^ /template/ DockPanel#ContentLayout">
            <Setter Property="HorizontalSpacing" Value="{DynamicResource {x:Static atom:SharedTokenKey.SpacingXS}}" />
            <Setter Property="Height" Value="{DynamicResource {x:Static atom:UploadTokenKey.PictureListPreviewerSize}}" />
        </Style>
        
        <Style Selector="^ /template/ StackPanel#ProgressLayout">
            <Setter Property="Spacing" Value="{DynamicResource {x:Static atom:SharedTokenKey.SpacingXS}}" />
        </Style>
        
        <Style Selector="^ /template/ atom|IconButton">
            <Setter Property="IconBrush" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorTextSecondary}}" />
            <Setter Property="Padding" Value="{DynamicResource {x:Static atom:SharedTokenKey.PaddingXXS}}" />
        </Style>
        
        <Style Selector="^ /template/ atom|Icon#LoadingIndicator">
            <Setter Property="StrokeBrush" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorPrimary}}" />
            <Setter Property="Width" Value="{DynamicResource {x:Static atom:UploadTokenKey.UploadThumbnailSize}}" />
            <Setter Property="Height" Value="{DynamicResource {x:Static atom:UploadTokenKey.UploadThumbnailSize}}" />
        </Style>
        
        <Style Selector="^ /template/ atom|IconButton:pointerover">
            <Setter Property="IconBrush" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorTextSecondary}}" />
            <Setter Property="Background" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorBgTextHover}}" />
        </Style>
        
    </ControlTheme>
</ResourceDictionary>