<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net"
    xmlns:antdicons="https://atomui.net/icons/antdesign"
    xmlns:uploadlang="using:AtomUI.Desktop.Controls.UploadLang"
    x:ClassModifier="internal">
    <ControlTheme x:Key="{x:Type atom:UploadPicturePendingContent}" TargetType="atom:UploadPicturePendingContent">
        <ControlTheme.BasedOn>
            <atom:AbstractUploadPictureContentTheme TargetType="atom:UploadPicturePendingContent" />
        </ControlTheme.BasedOn>
        <Setter Property="Template">
            <ControlTemplate>
                <Border Name="Frame"
                                   Background="{TemplateBinding Background}"
                                   BorderBrush="{TemplateBinding BorderBrush}"
                                   BorderThickness="{TemplateBinding BorderThickness}"
                                   CornerRadius="{TemplateBinding CornerRadius}"
                                   Padding="{TemplateBinding Padding}">
                    <DockPanel LastChildFill="True" Name="ContentLayout">
                        <antdicons:HistoryOutlined Name="Indicator" DockPanel.Dock="Left"/>
                        <atom:IconButton Icon="{antdicons:AntDesignIconProvider DeleteOutlined}"
                                         DockPanel.Dock="Right"
                                         Tag="{x:Static atom:UploadListActions.Remove}" 
                                         VerticalAlignment="Center"/>
                        <TextBlock Text="{DynamicResource {x:Static uploadlang:UploadLangResourceKey.Pending}}"
                                   VerticalAlignment="Center" />
                    </DockPanel>
                </Border>
            </ControlTemplate>
        </Setter>
        
        <Style Selector="^ /template/ DockPanel#ContentLayout">
            <Setter Property="HorizontalSpacing" Value="{DynamicResource {x:Static atom:SharedTokenKey.SpacingXS}}" />
            <Setter Property="Height" Value="{DynamicResource {x:Static atom:UploadTokenKey.PictureListPreviewerSize}}" />
        </Style>
        
        <Style Selector="^ /template/ atom|IconButton">
            <Setter Property="IconBrush" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorTextSecondary}}" />
            <Setter Property="Padding" Value="{DynamicResource {x:Static atom:SharedTokenKey.PaddingXXS}}" />
        </Style>
        
        <Style Selector="^ /template/ atom|Icon#Indicator">
            <Setter Property="StrokeBrush" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorTextSecondary}}" />
            <Setter Property="Width" Value="{DynamicResource {x:Static atom:UploadTokenKey.UploadThumbnailSize}}" />
            <Setter Property="Height" Value="{DynamicResource {x:Static atom:UploadTokenKey.UploadThumbnailSize}}" />
        </Style>
        
        <Style Selector="^ /template/ atom|IconButton:pointerover">
            <Setter Property="IconBrush" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorTextSecondary}}" />
            <Setter Property="Background" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorBgTextHover}}" />
        </Style>
        
    </ControlTheme>
</ResourceDictionary>